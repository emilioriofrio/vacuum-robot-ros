<launch>
  <arg name="world_file" default="$(find vacuum_robot_description)/worlds/house_v1.world"/>
  <arg name="map_file" default="$(find vacuum_robot_description)/maps/my_house.yaml"/>

  <include file="$(find vacuum_robot_description)/launch/spawn_in_gazebo_v2.launch"/>

  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
    <param name="scan_topic" value="scan"/>
    <param name="min_particles" value="500"/>
    <param name="max_particles" value="2000"/>
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find vacuum_robot_description)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find vacuum_robot_description)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find vacuum_robot_description)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find vacuum_robot_description)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find vacuum_robot_description)/param/base_local_planner_params.yaml" command="load" />
  </node>

  <env name="LIBGL_ALWAYS_SOFTWARE" value="1" />
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find vacuum_robot_description)/rviz/vacuum_robot.rviz"/>

</launch>
